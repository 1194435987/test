<script>
   'use strict'
   /* 标准颜色 */
   var colors = {
     Bblue:'rgb(157, 210, 248)',
     Bgreen : 'rgb(204,252,204)',
     Byellow: 'rgb(235,230,210)',
     blue:'rgb(10,120,200)',
     green : 'rgb(114,202,0)',
     yellow: 'rgb(200,200,100)',
   };
   var x=0;
   var liN=[[1,360],[2,360],[3,360]];/*皮肤序列*/


   function checkSkinsCookies(name)
   {
      
      var v = getCookie(name);
      skinchange(v);
   }



function skinchange(s){
var bodyBG=document.getElementsByTagName('body')[0].style;
var hBG=document.getElementById('h').style;

var licheck=function(s){

   if(s===x)return;
   liN.map(function(value,index){
      var arr=value;
      var liS=document.getElementsByTagName('li')[index].style;
      if(s===arr[0]){liS.transitionDuration='1s';
       liS.transform='rotateX('+arr[1]+'deg)';/* 变量加单位写法 */
       setTimeout( function(){document.getElementsByTagName('li')[index].innerHTML='√' }, 400);
       x=s;
       if(arr[1]===360){arr[1]=0;}
       else{arr[1]=360}
       document.getElementsByTagName('li')[index].className='li1';
}
   else {document.getElementsByTagName('li')[index].innerHTML='';document.getElementsByTagName('li')[index].className='li0';}
});
}
/* 改变css变量 来换皮肤 */
   switch(s){
      case 1: document.body.style.setProperty('--main-background',colors.Bblue);
      document.body.style.setProperty('--main-element',colors.blue);licheck(s); break;
      case 2: document.body.style.setProperty('--main-background',colors.Bgreen);
      document.body.style.setProperty('--main-element',colors.green);licheck(s); break;
      case 3: document.body.style.setProperty('--main-background',colors.Byellow);
      document.body.style.setProperty('--main-element',colors.yellow);licheck(s); break;
   }}

</script>
